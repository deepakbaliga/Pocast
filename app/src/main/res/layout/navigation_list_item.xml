<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <View
        android:id="@+id/view_nav_highlight"
        android:layout_width="@dimen/nav_list_highlight_width"
        android:layout_height="@dimen/nav_list_highlight_height"
        android:background="@color/pocastviolet"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imageview_nav_list"
        android:layout_width="@dimen/nav_list_icon"
        android:layout_height="@dimen/nav_list_icon"
        android:tint="@color/pocastgrey"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/view_nav_highlight"
        android:tintMode="add"
        android:foregroundTintMode="add"
        android:foregroundTint="#9e9e9e"
        android:backgroundTint="#9e9e9e"/>

    <TextView
        android:id="@+id/textview_nav_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:textColor="@color/pocastgrey"
        android:textSize="@dimen/nav_list_text_size"
        />




</RelativeLayout>