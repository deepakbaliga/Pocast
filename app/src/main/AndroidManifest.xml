<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepakbaliga.pocast">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PocastApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoToolbar">
        <activity android:name=".ActivitySession">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLogin" />
        <activity
            android:name=".ActivityMain"
            android:label="@string/title_activity_activity_main"
            android:theme="@style/AppThemeNoToolbar" />
        <activity android:name=".intro.ActivityIntro" />



    </application>

</manifest>
